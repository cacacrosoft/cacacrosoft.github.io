  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Videó Start + Több Ablak</title>
  <style>
    body {
      margin: 0;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: black;
    }

    video {
      max-width: 80%;
      max-height: 60%;
      border: 4px solid #fff;
      margin-bottom: 20px;
      display: block;
    }

    #startBtn {
      background-color: #28a745;
      color: white;
      font-size: 24px;
      padding: 15px 40px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.2s;
    }

    #startBtn:hover {
      background-color: #218838;
    }
  </style>
