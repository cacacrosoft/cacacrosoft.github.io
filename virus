<body>

<video id="myVideo" loop>
  <source src="Windows XP Installation Music.mp4" type="video/mp4">
</video>

<audio id="myAudio" src="hang3.mp3" loop></audio>

<button id="startBtn">START</button>


<script>
const video = document.getElementById('myVideo');
const audio = document.getElementById('myAudio');
const btn = document.getElementById('startBtn');

btn.addEventListener('click', () => {
    // Videó és hang elindítása
    video.play();
    audio.play();
    video.muted = false;
    audio.muted = false;

    // Ablakok megnyitása
    const numWindows = 5;
    for (let i = 0; i < numWindows; i++) {
        const newWin = window.open(window.location.href, '_blank', 'width=800,height=600');

        // Várjunk, amíg betöltődik az ablak
        newWin.onload = () => {
            // Gyors "ugrálás" minden 10 ms-ban
            setInterval(() => {
                const screenW = screen.availWidth;
                const screenH = screen.availHeight;
                const w = Math.floor(Math.random() * 400) + 200; // szélesség
                const h = Math.floor(Math.random() * 300) + 200; // magasság
                const x = Math.floor(Math.random() * (screenW - w));
                const y = Math.floor(Math.random() * (screenH - h));
                newWin.resizeTo(w, h);
                newWin.moveTo(x, y);
            }, 100); // 10 ms → nagyon gyors
        };
    }
});
</script>



</body>
</html>
